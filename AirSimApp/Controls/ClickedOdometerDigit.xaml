<UserControl x:Class="AirSimApp.Controls.ClickedOdometerDigit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirSimApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="10">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Background" Value="Black"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="Blue" VerticalAlignment="Center" ClipToBounds="True">
        <Label x:Name="DigitLabel"
               Content="0"
               Padding="0,0,0,0"
               Margin="0,0,0,0" />
    </Grid>
</UserControl>
