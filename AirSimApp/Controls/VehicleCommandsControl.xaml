<UserControl x:Class="AirSimApp.Controls.VehicleCommandsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AirSimApp.Controls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Arm Motors" Command="{Binding ArmCommand}" />
        <Button Content="Disarm Motors" Command="{Binding DisarmCommand}" />
        <Button Content="Takeoff" Command="{Binding TakeoffCommand}" />
        <Button Content="Hover In Place" Command="{Binding HoverInPlaceCommand}" />
        <Button Content="Reset" Command="{Binding ResetCommand}" />
        <Button Content="Land Now" Command="{Binding LandNowCommand}" />
        <Button Content="Go Home" Command="{Binding GoHomeCommand}" />
        <Button Content="Enable API" Command="{Binding EnableApiCommand}" />
        <Button Content="Disable API" Command="{Binding DisableApiCommand}" />
    </StackPanel>
</UserControl>