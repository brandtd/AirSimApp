<Window x:Class="AirSimApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:AirSimApp"
        mc:Ignorable="d"
        Title="MainWindow" Width="525" ResizeMode="NoResize" SizeToContent="Height">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="RPC Server:"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding AddressToUse, Converter={local:IpAddressToStringConverter}}"/>
            <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding PortToUse}"/>

            <Button Grid.Row="0" Grid.Column="4" Command="{Binding Connect}" Content="Connect"/>

            <Label Grid.Row="1" Grid.Column="1" Content="{Binding ConnectedAddress, Converter={local:IpAddressToStringConverter}}" IsEnabled="{Binding Connected}"/>
            <Label Grid.Row="1" Grid.Column="2" Content="{Binding ConnectedPort}" IsEnabled="{Binding Connected}"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0" Content="Home Latitude:"/>
            <Label Grid.Row="0" Grid.Column="1" Content="{Binding HomeLatitude}"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Home Longitude:"/>
            <Label Grid.Row="1" Grid.Column="1" Content="{Binding HomeLongitude}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Home Altitude:"/>
            <Label Grid.Row="2" Grid.Column="1" Content="{Binding HomeAltitude}"/>

            <Label Grid.Row="0" Grid.Column="2" Content="Vehicle Latitude:"/>
            <Label Grid.Row="0" Grid.Column="3" Content="{Binding VehicleLatitude}"/>

            <Label Grid.Row="1" Grid.Column="2" Content="Vehicle Longitude:"/>
            <Label Grid.Row="1" Grid.Column="3" Content="{Binding VehicleLongitude}"/>

            <Label Grid.Row="2" Grid.Column="2" Content="Vehicle Altitude:"/>
            <Label Grid.Row="2" Grid.Column="3" Content="{Binding VehicleAltitude}"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Camera X:"/>
            <Label Grid.Row="3" Grid.Column="1" Content="{Binding CamreaX}"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Camera Y:"/>
            <Label Grid.Row="4" Grid.Column="1" Content="{Binding CamreaY}"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Camera Z:"/>
            <Label Grid.Row="5" Grid.Column="1" Content="{Binding CamreaZ}"/>

            <Label Grid.Row="3" Grid.Column="2" Content="Vehicle Roll:"/>
            <Label Grid.Row="3" Grid.Column="3" Content="{Binding VehicleRoll}"/>

            <Label Grid.Row="4" Grid.Column="2" Content="Vehicle Pitch:"/>
            <Label Grid.Row="4" Grid.Column="3" Content="{Binding VehiclePitch}"/>

            <Label Grid.Row="5" Grid.Column="2" Content="Vehicle Yaw:"/>
            <Label Grid.Row="5" Grid.Column="3" Content="{Binding VehicleYaw}"/>
        </Grid>
    </StackPanel>
</Window>
